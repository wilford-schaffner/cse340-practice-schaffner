<%- include('../partials/header') %>
<main>
    <div class="course-header faculty-detail-header">
        <div class="faculty-detail-photo">
            <img
                class="faculty-photo"
                src="/images/faculty/<%= faculty.slug %>.jpg"
                alt="<%= faculty.name %>"
            >
        </div>
        <div class="faculty-detail-info">
            <h1><%= faculty.name %></h1>
            <p class="course-meta"><%= faculty.department %> â€¢ <%= faculty.title %></p>
        </div>
    </div>

    <div class="sections">
        <div class="sections-header">
            <h2>Contact Information</h2>
        </div>

        <div class="section-list">
            <div class="section-card">
                <div class="section-time">Office</div>
                <div class="section-room"><%= faculty.office %></div>
            </div>
            <div class="section-card">
                <div class="section-time">Phone</div>
                <div class="section-room"><%= faculty.phone %></div>
            </div>
            <div class="section-card">
                <div class="section-time">Email</div>
                <div class="section-room"><a href="mailto:<%= faculty.email %>"><%= faculty.email %></a></div>
            </div>
        </div>
    </div>

    <div class="navigation">
        <p><a href="/faculty">&larr; Back to Faculty Directory</a></p>
    </div>
</main>
<%- include('../partials/footer') %>
