<%- include('../partials/header') %>
<main>
    <h1>Faculty Directory</h1>
    <p>Browse our faculty members and click on any name to see detailed information including office location, contact information, and academic title.</p>

    <div class="sections-header">
        <h2>Faculty Members</h2>
        <div class="sort-options">
            <span>Sort by: </span>
            <a href="/faculty?sort=name" class="<%= currentSort === 'name' ? 'active' : '' %>">Name</a>
            <a href="/faculty?sort=department" class="<%= currentSort === 'department' ? 'active' : '' %>">Department</a>
            <a href="/faculty?sort=title" class="<%= currentSort === 'title' ? 'active' : '' %>">Title</a>
        </div>
    </div>

    <div class="course-list">
        <% faculty.forEach(member => { %>
            <div class="course-card faculty-card">
                <div class="faculty-card-media">
                    <img
                        class="faculty-photo"
                        src="/images/faculty/<%= member.slug %>.jpg"
                        alt="<%= member.name %>"
                    >
                </div>
                <div class="faculty-card-content">
                    <h3><a href="/faculty/<%= member.slug %>"><%= member.name %></a></h3>
                    <p class="course-id"><%= member.department %> â€¢ <%= member.title %></p>
                </div>
            </div>
        <% }); %>
    </div>
</main>
<%- include('../partials/footer') %>
