<%- include('../../partials/header') %>
<main>
    <h1>Contact Us</h1>
    <p>
        Have questions or feedback? Send us a message using the form below and we'll get back to you as soon as possible.
    </p>
    
    <form method="POST" action="/contact" class="contact-form">
        <div class="form-group">
            <label for="subject">Subject</label>
            <input type="text" id="subject" name="subject" placeholder="What is this message about?" minlength="2" required>
        </div>
        
        <div class="form-group">
            <label for="message">Message</label>
            <textarea id="message" name="message" rows="6" placeholder="Please provide details about your question or feedback..." minlength="10" required></textarea>
        </div>
        
        <button type="submit">Send Message</button>
    </form>
</main>
